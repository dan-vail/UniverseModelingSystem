
@{
    Layout = "~/Views/Shared/_UniverseObjectRendererLayout.cshtml";
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MediaPlayerFullScreenMenu</title>
    <style>

        @@font-face {
            font-family: audiowide;
            src: url('/fonts/audiowide.ttf');
        }

        /* Generated by https://generator.ui.glass/ */
        /*Glassmorphism card effect  CSS gen site. Not bad card effect*/
        .card {
            backdrop-filter: blur(21px) saturate(165%);
            -webkit-backdrop-filter: blur(21px) saturate(165%);
            background-color: rgba(17, 25, 40, 0.62);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
        }

        .mainMenuContainer {
            transition: .5s;
            position: absolute;
            top: 0px;
            left: 10vw;
            width: 80vw;
            height: 70vh;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            text-align: center;
        }

        .mainMenuItem {
            width: clamp(160px, 20vw, 320);
            height: clamp(90px, 11.2vw, 180px);
            color: #ffffff;
            display: flex;
            text-align: center;
            justify-items: center;
/*            transform: perspective(800px) rotateY(25deg) scale(0.9) rotateX(10deg);
            opacity: .9;
*/            transition: 1s;
            overflow: hidden;
        }
        mainMenuItem:hover {
            z-index: 9999;
  /*          transform: perspective(800px) rotateY(0deg) translateY(3vh) translateX(-5vw) rotateX(10deg) scale(1.75);
  */        backdrop-filter: blur(25px) saturate(93%);
            -webkit-backdrop-filter: blur(25px) saturate(93%);
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, .9);
            overflow: visible;
            transform: scale(1.5);
        }

        .mainMenuItem ul {
            font-size: clamp(10px, 2.5vmax, 26);
        }
            .mainMenuItem li {
            }

            .mainMenuItem a {
                transition: 1s;
                font-size: clamp(12px, 3.5vmax, 42px);
                color: #00ffff;
                text-shadow: 2px 2px #ffffff;
                text-align: center;
            }

                .mainMenuItem a:hover {
                    font-size: clamp(12px, 3.5vmax, 42px);
                    transition: .5s;
                    color: #ff6a00;
                    text-shadow: 2px 2px #000000;
                }
    </style>

</head>
<body>
    <div>

        <div id="dbFullScreenMenu"
             class="mainMenuContainer"
             style="
                    position: absolute;
                    top: 15vh;
                    left: 10vw;
                    width: 80vw;
                    height: 70vh;">


            <div id="settingsColors"
                 class="settingsPopup"
                 style="display: grid;
                 grid-template-columns: 1fr 1fr 1fr 1fr;
                 height: 10vmax;
                 width: 50%;
                 position: absolute;
                 top: 45vh;
                 left: 50%;
                 color: #ffffff;
                 z-index: 99;">

                <div style="display: flex; flex-direction: column;">
                    <div>
                        <label class="themedUIHighlight">
                            MAIN
                        </label>
                    </div>
                    <div>
                        <input type="color"
                               id="themeColor"
                               value="#ff6a00"
                               style="width: clamp(16px, 8vmax, 8vmax);
                                    height: clamp(16px, 8vmax, 8max)" />
                    </div>
                </div>

                <div style="display: flex; flex-direction: column;">
                    <div>
                        <label class="themedUIHighlight">
                            BACKGROUND
                        </label>
                    </div>

                    <div>
                        <input type="color" id="themeBackgroundColor" value="#222222"
                               style="width: clamp(16px, 8vmax, 8vmax);
                                    height: clamp(16px, 8vmax, 8max)" />
                    </div>
                </div>

                <div style="display: flex; flex-direction: column;">
                    <div>
                        <label class="themedUIHighlight">
                            HIGHLIGHT
                        </label>
                    </div>

                    <div>
                        <input type="color" id="themeHighlightColor" value="#ffffff"
                               style="width: clamp(16px, 8vmax, 8vmax);
                                    height: clamp(16px, 8vmax, 8max)" />
                    </div>
                </div>

                <div style="display: flex; flex-direction: column;">
                    <div>
                        <label class="themedUIHighlight">
                            OBJECT
                        </label>
                    </div>

                    <div>
                        <input type="color" id="themeObjectBackgroundColor" value="#010101"
                               style="width: clamp(16px, 8vmax, 8vmax);
                                    height: clamp(16px, 8vmax, 8max)" />
                    </div>
                </div>

            </div>

        </div>

    </div>

    <script>
            ajaxRenderDIV({
                divToPopulate: 'dbFullScreenMenu',
                pageToRenderURL: '/ApplicationUIElements/MenuBar?uielementgroupid=8888'
            });
    </script>

</body>
</html>






