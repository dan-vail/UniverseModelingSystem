    function enumerateUserUniverseObjects() {
        var UniverseObjectEnumerationDIV =
            document.getElementById("UniverseObjectEnumerationDIV");

        navigator.mediaUniverseObjects.enumerateUniverseObjects()
            .then(function (UniverseObjects) {
                userUniverseObjects = UniverseObjects;
                var index = 0;
                UniverseObjects.forEach(function (UniverseObject) {

                    var UniverseObjectContainer =
                        document.createElement("div");
                    UniverseObjectContainer.classList
                        .add("UniverseObjectAVObject");

                    UniverseObjectContainer
                        .setAttribute("id", "UniverseObjectAVObject" + index);

                    UniverseObjectContainer
                        .setAttribute("name", UniverseObject.UniverseObjectId);

                    var UniverseObjectKind =
                        document.createElement('a');

                    UniverseObjectKind.classList
                        .add("themedUI");

                    UniverseObjectKind.style
                        .cssText = "width: 100%;"

                    UniverseObjectKind.innerText =
                        UniverseObject.kind;

                    UniverseObjectContainer
                        .appendChild(UniverseObjectKind);

                    var UniverseObjectLabel =
                        document.createElement('a');

                    UniverseObjectLabel.classList
                        .add("themedUI");

                    UniverseObjectLabel
                        .setAttribute("id", "UniverseObjectLink" + index);

                    var javascriptLinkString =
                        "javascript: window.videoPlayers[0]" +
                        ".setSinkId('" +
                        UniverseObject.UniverseObjectId +
                        "')";

                    UniverseObjectLabel
                        .setAttribute("href", javascriptLinkString);

                    UniverseObjectLabel.style
                        .cssText = "width: 100%; height: 100%;"

                    UniverseObjectLabel.innerText =
                        UniverseObject.label;

                    UniverseObjectContainer
                        .appendChild(UniverseObjectLabel);

                    UniverseObjectEnumerationDIV
                        .appendChild(UniverseObjectContainer);

                    UniverseObjectContainer.addEventListener('mouseenter', function (event) {
                        var others =
                            document.querySelectorAll(".UniverseObjectAVObject");
                        others.forEach(element => {
                            element.style.transition = '1.5s';
                            element.style.transform = 'scale(.5)';
                            element.style.opacity = '.1';
                        });
                        UniverseObjectContainer.style.transition = '.1s';
                        UniverseObjectContainer.style.transform = 'scale(1.4)';
                        UniverseObjectContainer.style.opacity = '1';
                    })

                    UniverseObjectContainer.addEventListener('mouseleave', function (event) {
                        var others =
                            document.querySelectorAll(".UniverseObjectAVObject");
                        others.forEach(element => {
                            element.style.transition = '.8';
                            element.style.transform = 'scale(1)';
                            element.style.opacity = '1';
                        });
                    })
                    index++;
                });
            })
    }

    getMedia(constraints);

