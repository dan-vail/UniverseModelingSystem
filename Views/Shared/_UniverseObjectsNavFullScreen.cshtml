

@{
    Layout = null;
}


<style>
    /* Background styles */
    @@font-face {
        font-family: audiowide;
        src: url('/fonts/audiowide.ttf');
    }

    body {
        font-family: audiowide;
        overflow: hidden;
    }

    #universeObjectsMenuContainer {
        position: absolute;
        top: 0px;
        left: 5vw;
        width: 90vw;
    }

    .universeObject {
        transition: .5s;
        font-size: clamp(16px, 2.4vmax, 36px);
        font-family: audiowide;
        width: clamp(200px, 20vw, 300px);
        height: clamp(120px, 18vh, 240px);
        color: #ffffff;
        display: flex;
        flex-wrap: wrap;
        text-align: center;
        justify-items: flex-start;
        opacity: .9;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.125);
        overflow: hidden;
    }

        .UniverseObjectAVObject:hover {
            -webkit-box-reflect: below 0 linear-gradient(transparent, transparent, rgba(0, 0, 0, 0.5));
            z-index: 99999;
            overflow: visible;
            opacity: 1;
            background-color: rgba(255, 255, 255, .9);
            color: #000000;
            text-shadow: 1px 1px #000000;
        }

        .UniverseObjectAVObject a {
            transition: .5s;
            font-size: clamp(12px, 2vmax, 28px);
            color: #00ffff;
            text-shadow: 1px 1px #000000;
            text-align: center;
        }

            .UniverseObjectAVObject a:hover {
                font-size: clamp(12px, 2vmax, 28px);
                transition: .5s;
                color: #ff6a00;
                text-shadow: 1px 1px #00ffff;
            }

    .UniverseObjectAVObjectContainer {
        height: 100%;
        width: 100%;
        padding: 5vh 5vw 5vh 5vw;
        overflow: hidden;
        background-color: transparent;
    }
</style>



<div id="UniverseObjectsContainer">
    <button class="
                    themedUI
                    themedUIBackground
                    buttons">
    </button>
    <div id="UniverseObjectEnumerationDIV"
         style="
                background-color: rgba(8, 8, 8, .9);
                width: 100%;
                height: 100%;
                display: flex;
                flex-wrap: wrap;
                background-image: radial-gradient(at 47% 33%, rgba(0, 0, 22, .8) 0, transparent 59%), radial-gradient(at 82% 65%, rgb(255, 109, 0));"
         class="UniverseObjectAVObjectContainer">
    </div>
</div>

