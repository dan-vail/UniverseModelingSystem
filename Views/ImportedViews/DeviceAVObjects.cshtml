    function enumerateUserDevices() {
        var deviceEnumerationDIV =
            document.getElementById("deviceEnumerationDIV");

        navigator.mediaDevices.enumerateDevices()
            .then(function (devices) {
                userDevices = devices;
                var index = 0;
                devices.forEach(function (device) {

                    var deviceContainer =
                        document.createElement("div");
                    deviceContainer.classList
                        .add("deviceAVObject");

                    deviceContainer
                        .setAttribute("id", "deviceAVObject" + index);

                    deviceContainer
                        .setAttribute("name", device.deviceId);

                    var deviceKind =
                        document.createElement('a');

                    deviceKind.classList
                        .add("themedUI");

                    deviceKind.style
                        .cssText = "width: 100%;"

                    deviceKind.innerText =
                        device.kind;

                    deviceContainer
                        .appendChild(deviceKind);

                    var deviceLabel =
                        document.createElement('a');

                    deviceLabel.classList
                        .add("themedUI");

                    deviceLabel
                        .setAttribute("id", "deviceLink" + index);

                    var javascriptLinkString =
                        "javascript: window.videoPlayers[0]" +
                        ".setSinkId('" +
                        device.deviceId +
                        "')";

                    deviceLabel
                        .setAttribute("href", javascriptLinkString);

                    deviceLabel.style
                        .cssText = "width: 100%; height: 100%;"

                    deviceLabel.innerText =
                        device.label;

                    deviceContainer
                        .appendChild(deviceLabel);

                    deviceEnumerationDIV
                        .appendChild(deviceContainer);

                    deviceContainer.addEventListener('mouseenter', function (event) {
                        var others =
                            document.querySelectorAll(".deviceAVObject");
                        others.forEach(element => {
                            element.style.transition = '1.5s';
                            element.style.transform = 'scale(.5)';
                            element.style.opacity = '.1';
                        });
                        deviceContainer.style.transition = '.1s';
                        deviceContainer.style.transform = 'scale(1.4)';
                        deviceContainer.style.opacity = '1';
                    })

                    deviceContainer.addEventListener('mouseleave', function (event) {
                        var others =
                            document.querySelectorAll(".deviceAVObject");
                        others.forEach(element => {
                            element.style.transition = '.8';
                            element.style.transform = 'scale(1)';
                            element.style.opacity = '1';
                        });
                    })
                    index++;
                });
            })
    }

    getMedia(constraints);

</script>

